<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="10dp"
    android:background="@drawable/rounded_background"
    android:layout_margin="8dp"
    android:layout_marginBottom="10dp"
    android:elevation="4dp">

    <!-- Main Horizontal Layout for Image and Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Doctor Image -->
        <ImageView
            android:id="@+id/doctor_image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rounded_background"
            android:layout_marginEnd="12dp" />

        <!-- Doctor Info and Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Profession -->
            <TextView
                android:id="@+id/doctor_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/tick"
                android:layout_gravity=""
                android:drawablePadding="6dp"
                android:text="Professional Doctor"
                android:textColor="@color/purple_500"
                android:textSize="12sp" />

            <!-- Doctor Name -->
            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Michael Roberts"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginTop="4dp" />

            <!-- Speciality -->
            <TextView
                android:id="@+id/doctor_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orthopedics"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

                <RatingBar
                    android:id="@+id/doctor_rating"
                    android:layout_gravity="right"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:paddingStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="5dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="#ECB204"
                    android:rating="4.3"
                    android:scaleX="0.5"
                    android:scaleY="0.6"
                    android:stepSize="0.1" />


        </LinearLayout>

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/favorite_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/fav_bold"
            android:tint="@color/purple_500"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Make Appointment Button -->
    <Button
        android:id="@+id/appointment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#533259"
        android:elevation="2dp"
        android:gravity="center"
        android:text="Make Appointment"
        android:textSize="16dp"
        android:textColor="@color/white" />
</LinearLayout>

